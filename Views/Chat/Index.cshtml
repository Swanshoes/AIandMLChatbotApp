<div class="container">
    <h2>AI and ML Building Chatbot</h2>

    <div id="chatWindow"></div>
    <hr />
    <div class="userInteractionDiv">
        <div class="row align-items-center">
            <div class="col-10">
                <textarea class="form-control" id="userInput" placeholder="Ask a question here..."></textarea>
            </div>
            <div class="col-2">
                <button class="btn btn-primary w-100" id="sendBTN" onclick="processUserInput(); return false;" style="">Submit</button>
            </div>
        </div>

        <h3 class="mt-3">Upload Training Data</h3>
        <form id="uploadForm" enctype="multipart/form-data">
            <div class="mb-2">
                <input type="file" class="form-control" id="fileUpload" accept=".csv" />
            </div>
            <button class="btn btn-secondary" id="uploadBTN" type="button" onclick="processCSVUpload();">Upload and Retrain</button>
        </form>
        <div id="uploadStatus" class="mt-2"></div>
    </div>
</div>

<script src="~/js/chat.js"></script>
